<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a0_0.app_shixun.MainActivity">
    <com.example.a0_0.app_shixun.UI.ScrollLinearLayout
        android:id="@+id/lin_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.a0_0.app_shixun.UI.Indicator
            android:id="@+id/main_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            indicator:color="@color/main"
            indicator:height="2dp">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_bendi"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"

                android:text="本地歌曲"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/tv_wangluo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="网络搜索"
                android:textColor="@color/main_dark"/>
        </com.example.a0_0.app_shixun.UI.Indicator>
        <!--indicator必须紧接着ViewPager-->
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_indicator"
            android:overScrollMode="never"/>
    </com.example.a0_0.app_shixun.UI.ScrollLinearLayout>
    <View
        android:id="@+id/view_pop_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88666666"
        android:visibility="gone"/>
</LinearLayout>
